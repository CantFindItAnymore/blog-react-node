{
  "extends": ["standard", "standard-react"],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "no-unexpected-multiline": 1,
    "no-multi-spaces": 1,
    "key-spacing": [
      1,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ]
  },
  "plugins": ["react"]
}
