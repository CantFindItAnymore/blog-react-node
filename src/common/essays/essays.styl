@media screen and (max-width: 540px)
  .essays-container
    .essays-list,
    .pagination-container
      width 100% !important
      left 50% !important
.essays-container
  width 100%
  // height 100vh
  min-height 100vh
  margin-top 46px
  padding-top 34px
  box-sizing border-box
  display flex
  flex-direction column
  .essays-list
    width 540px
    // background teal
    position relative
    left 38%
    transform translateX(-50%)
    display flex
    flex-direction column
    align-items center
    &>div
      margin-bottom 30px
  .pagination-container
    width 540px
    position relative
    left 38%
    transform translateX(-50%)
    background #fff
    padding 10px
    box-sizing border-box
    display flex
    justify-content center
