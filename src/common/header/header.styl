@media screen and (max-width: 900px)
  .header-container
    .header-center
      display none !important
@media screen and (max-width: 650px)
  .header-container
    .header-left
      width 100% !important
      .list-icon-container
        display block !important
    .header-right
      display none !important
.header-container
  width 100%
  height 46px
  position fixed
  top 0
  z-index 99
  background #fff
  border-bottom 1px solid #D9D9D9
  box-shadow 0 2px 8px #f0f1f2
  display flex
  align-items center
  .header-left
    position relative
    width 300px
    height 100%
    // background skyblue
    font-size 20px
    flex-shrink 0
    display flex
    align-items center
    justify-content center
    .list-icon-container
      display none
      .list-icon
        position absolute
        top 0
        bottom 0
        right 30px
        margin auto
        cursor pointer
        display flex
        align-items center
  .header-center
    height 100%
    // background yellow
    flex 1
    flex-shrink 1
    display flex
    align-items center
  .header-right
    height 100%
    width 600px
    font-size 14px
    // background pink
    flex-shrink 1
    display flex
    justify-content space-around
    align-items center
    flex-wrap nowrap
    .nav-item
      cursor pointer
      &:hover
        color #1890FF
      i
        margin-right 10px
    .headerImg
      height 40px
      width 40px
      border-radius 50%
      background gold
      display flex
      justify-content space-around
      align-items center