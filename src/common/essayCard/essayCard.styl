.card-container
  background pink
  width 100%
  cursor pointer
  .title-container
    font-size 18px
    font-weight bold
    // color red
  .time-container
    margin-left 20px
    color #999
    font-size 10px
  .content-container
    max-height 60px
    overflow hidden
  .ant-card-body
    padding-bottom 10px
    &:hover
      // background #2A859F
      box-shadow 2px 2px 10px #888
  .ant-divider
    margin-bottom 10px
  .content-footer
    width 100%
    height 30px
    // background pink
    display flex
    justify-content flex-start
    &>div
      margin-right 20px
      font-size 12px
      display flex
      align-items center
      &>.iconfont
        color #f50
        font-size 24px
        margin-right 5px
        align-items flex-end
